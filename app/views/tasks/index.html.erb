<h1><%= t('view.task.index_task') %></h1>
<p><%= notice %></p>

<%= form_with(url: tasks_path, method: :get, local: true) do |form| %>
  <%= form.label :title, 'タスク名'  %><br>
  <%= form.text_field :title %><br>
  <%= form.label :status, 'ステータス' %><br>
  <%= form.select :status, options_for_select(Task.statuses.keys.map {|k| [I18n.t("enums.task.status.#{k}"), k]}), include_blank: true %><br>
  <%= form.submit %q(検索) %>
<% end %>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>タスク詳細</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_row">
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.human_attribute_enum(:status) %></td>
        <td><%= link_to %q(詳細), task_path(task.id) %></td>
        <td><%= link_to %q(編集), edit_task_path(task.id) %></td>
        <td><%= link_to %q(削除), task_path(task.id), method: :delete, data: { confirm: %q(削除します。よろしいですか。) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to %q(終了期限でソートする), tasks_path(sort_expired: "true") %><br>
<%= link_to %q(タスクを登録する), new_task_path %>
