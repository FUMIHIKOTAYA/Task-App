<h1><%= t('view.task.index_task') %></h1>

<%= form_with(url: tasks_path, method: :get, local: true) do |form| %>
  <div class="row align-content-lg-center ml-1 mb-5">
    <div class="col-lg-3">
      <p><span class="bold"><%= form.label :title, t('view.task.name')  %></p>
      <%= form.text_field :title %>
    </div>
    <div class="col-lg-2">
      <p><span class="bold"><%= form.label :status, t('view.task.content') %></p>
      <%= form.select :status, options_for_select(Task.statuses.keys.map {|k| [I18n.t("enums.task.status.#{k}"), k]}), include_blank: true %>
    </div>
    <div class="col-lg-1">
    <br>
      <%= form.submit t('view.search'), id: "searchbutton", class: "btn btn-primary btn-lg" %>
      </div>
  </div>
<% end %>
<div class="row mx-3 my-1">
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t('view.task.name') %></th>
      <th><%= t('view.task.content') %></th>
      <th><%= t('view.task.deadline') %></th>
      <th><%= t('view.task.status') %></th>
      <th><%= t('view.task.priority') %></th>
      <th><%= t('view.show') %></th>
      <th><%= t('view.edit') %></th>
      <th><%= t('view.delete') %></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_row">
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.human_attribute_enum(:status) %></td>
        <td><%= task.human_attribute_enum(:priority) %></td>
        <td><%= link_to t('view.show'), task_path(task.id), class: "btn btn-info" %></td>
        <td><%= link_to t('view.edit'), edit_task_path(task.id), class: "btn btn-info" %></td>
        <td><%= link_to t('view.delete'), task_path(task.id), method: :delete, data: { confirm: t('view.delete_confirm') }, class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="row justify-content-around">
  <%= paginate @tasks %>
</div>
<button class="btn btn-primary ml-4 my-4"><%= link_to t('view.sorted_deadline'), tasks_path(sort_expired: "true") %></button>
<button class="btn btn-primary ml-1 my-4"><%= link_to t('view.sorted_priority'), tasks_path(sort_priority: "true") %></button>
<button class="btn btn-info ml-1 my-4"><%= link_to t('view.create_task'), new_task_path %></button>
