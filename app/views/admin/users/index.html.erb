<h1><%= 'ユーザー管理' %></h1>

<div class="row mx-3 my-1">
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th><%= 'ユーザー名' %></th>
      <th><%= 'メールアドレス' %></th>
      <th><%= '権限' %></th>
      <th><%= 'タスク件数' %></th>
      <th><%= t('view.show') %></th>
      <th><%= t('view.edit') %></th>
      <th><%= t('view.delete') %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="user_row">
        <td><%= user.name %></td>
        <td><%= user.email  %></td>
        <td><%= user.admin? %></td>
        <td><%= user.tasks.size %></td>
        <td id='show-link'><%= link_to t('view.show'), admin_user_path(user.id), class: "btn btn-info" %></td>
        <td id='edit-link'><%= link_to t('view.edit'), edit_admin_user_path(user.id), class: "btn btn-info" %></td>
        <td id='delete-link'><%= link_to t('view.delete'), admin_user_path(user.id), method: :delete, data: { confirm: t('view.delete_confirm') }, class: "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="row justify-content-around">
  <%= paginate @users %>
</div>
<button class="btn btn-info ml-1 my-4"><%= link_to %q(ユーザーを登録する), new_admin_user_path %></button>
